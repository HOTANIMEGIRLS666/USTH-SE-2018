<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/chooseWorkoutButton"
        android:layout_width="219dp"
        android:layout_height="96dp"
        android:layout_marginBottom="77dp"
        android:layout_marginTop="104dp"
        android:background="@color/opaque_red"
        android:text="CHOOSE WORKOUT"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/customWorkoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customWorkoutButton"
        android:layout_width="219dp"
        android:layout_height="96dp"
        android:layout_marginBottom="186dp"
        android:background="@color/opaque_red"
        android:text="CUSTOM WORKOUT"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseWorkoutButton" />
</android.support.constraint.ConstraintLayout>